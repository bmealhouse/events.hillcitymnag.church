{
  "name": "events.hillcitymnag.church",
  "version": "1.0.0",
  "description": "Get Hill City Assembly of God events from Facebook's event endpoint",
  "main": "lib/index.js",
  "repository": "https://github.com/hillcitymnag/events.hillcitymnag.church.git",
  "author": "Brent Mealhouse <bmealhouse@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.1.0"
  },
  "scripts": {
    "build": "npm run lint && npm test",
    "dev": "nodemon -x npm start",
    "lint": "xo",
    "precommit": "lint-staged",
    "prepush": "npm run build",
    "start": "micro",
    "test": "NODE_ENV=test jest"
  },
  "jest": {
    "collectCoverage": true,
    "testEnvironment": "node",
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --no-semi --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "extends": [
      "prettier"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "2.1.1",
    "jest": "20.0.4",
    "micro": "7.3.3",
    "micro-cors": "0.0.4",
    "micro-get": "0.1.1",
    "micro-rollbar": "1.0.2",
    "nock": "9.0.13",
    "node-fetch": "1.7.1",
    "test-listen": "1.0.2",
    "xo": "0.18.2"
  },
  "devDependencies": {
    "husky": "0.13.4",
    "lint-staged": "3.6.1",
    "nodemon": "1.11.0",
    "prettier": "1.4.4"
  }
}
